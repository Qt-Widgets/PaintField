{
  ".key-bindings":
  {
    "paintfield.file.new": "Ctrl+N",
    "paintfield.file.open": "Ctrl+O",
    "paintfield.file.save": "Ctrl+S",
    "paintfield.file.saveAs": "Ctrl+Shift+S",
    "paintfield.file.close": "Ctrl+W",
    "paintfield.file.quit": "Ctrl+Q",

    "paintfield.edit.undo": "Ctrl+Z",
    "paintfield.edit.redo": "Ctrl+Shift+Z",
    "paintfield.edit.cut": "Ctrl+X",
    "paintfield.edit.copy": "Ctrl+C",
    "paintfield.edit.paste": "Ctrl+V",
    "paintfield.edit.selectAll": "Ctrl+A",
    "paintfield.edit.delete": "Delete",

    "paintfield.layer.newRaster": "Ctrl+L",

    "paintfield.window.minimize": "Ctrl+M",
    "paintfield.window.newWorkspace": "Ctrl+Shift+N",
    "paintfield.window.closeWorkspace": "Ctrl+Shift+W",
    
    "paintfield.canvas.dragTranslation": "Space",
    "paintfield.canvas.dragScale": "Ctrl+Space",
    "paintfield.canvas.dragRotation": "Shift+Space"
  },


  "menubar-order":
  [
    {
      "menu": "paintfield.file",
      "children":
      [
        "paintfield.file.new",
        "paintfield.file.newFromImageFile",
        "paintfield.file.newFromClipboard",
        "paintfield.file.open",
        "",
        "paintfield.file.newCanvasIntoDocument",
        "",
        "paintfield.file.close",
        "paintfield.file.save",
        "paintfield.file.saveAs",
        "",
        "paintfield.file.export",
        "",
        "paintfield.file.quit"
      ]
    },
    {
      "menu": "paintfield.edit",
      "children":
      [
        "paintfield.edit.undo",
        "paintfield.edit.redo",
        "",
        "paintfield.edit.cut",
        "paintfield.edit.copy",
        "paintfield.edit.paste",
        "paintfield.edit.delete",
        "",
        "paintfield.edit.selectAll"
      ]
    },
    {
      "menu": "paintfield.layer",
      "children":
      [
        "paintfield.layer.newRaster",
        "paintfield.layer.newGroup",
        "paintfield.layer.import",
        "",
        "paintfield.layer.merge",
        "paintfield.layer.rasterize"
      ]
    },
    {
      "menu": "paintfield.window",
      "children":
      [
        "paintfield.window.minimize",
        "paintfield.window.zoom",
        "",
        "paintfield.window.newWorkspace",
        "",
        "paintfield.window.splitVertically",
        "paintfield.window.splitHorizontally",
        "paintfield.window.closeCurrentSplit",
        "",
        "paintfield.window.closeWorkspace"
      ]
    },
    {
      "menu": "paintfield.help",
      "children":
      [
        "paintfield.help.about",
        "paintfield.help.aboutQt"
      ]
    }
  ],


  "tool-order":
  [
    "paintfield.tool.brush",
    "paintfield.tool.move",
    "",
    "paintfield.tool.selectAndMove",
    "paintfield.tool.rectangle",
    "paintfield.tool.ellipse",
    "paintfield.tool.text"
  ],


  "workspace-state-default":
  {
    "item-order" :
    {
      "sidebars" :
      {
        "right" : [
          [
            [ "paintfield.sidebar.color", "paintfield.sidebar.shape" ],
            [ "paintfield.sidebar.fillStroke" ]
          ],
          [
            [ "paintfield.sidebar.navigator" ],
            [ "paintfield.sidebar.layerTree" ],
            [ "paintfield.sidebar.brush", "paintfield.sidebar.brushEditor" ],
            [ "paintfield.sidebar.brushLibrary" ]
          ]
        ],
        "top" : [ ]
      },
      "toolbars" :
      {
        "top" : [ "paintfield.toolbar.tool" ]
      }
    }
  },

  "platform-specific":
  {
    "mac":
    {
      ".key-bindings":
      {
        "paintfield.canvas.dragScale": "Alt+Space"
      }
    }
  }
}
